;; Widget
(defwidget music [pause_icon play_icon next_icon prev_icon] 
  (eventbox :onhover "${EWW_EXECUTABLE} update music_reveal=true"
			:onhoverlost "${EWW_EXECUTABLE} update music_reveal=false"
            :cursor "pointer"
		        (box :class "module-2" :orientation "h" :space-evenly "false" :vexpand "false" :hexpand "false" 
			        (button :class "song" :onrightclick "~/.config/eww/scripts/music_win.sh" titlescroll)
	                (revealer :transition "slideright"
			                :reveal music_reveal
			                :duration "350ms"
                        (box :vexpand "false" :hexpand "false" :orientation "h" 
                            (button :class "song_btn_prev" :onclick "playerctl previous" prev_icon)
					        (button :class "song_btn_play" :onclick "playerctl play-pause" {song_status == "Paused" ? pause_icon : play_icon})
					        (button :class "song_btn_next" :onclick "playerctl next" next_icon))))))

