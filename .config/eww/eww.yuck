    ;;       (button :class "music_btn_play" 
    ;;         :onclick "playerctl --player='${player}' play-pause" 
    ;;         {status == "Playing" ? play_icon : pause_icon})
    ;;       (button :class "music_btn_next" 
    ;;         :onclick "playerctl --player='${player}' next" next_icon))
    ;;     ;; (scale :class "music_bar" :min 0 :max 100 
    ;;     ;;   :value {position} 
    ;;     ;;   :onchange "playerctl --player='${player}' position {}%")
    ;;   )
    ;; )
)

(defwidget music_card [play_icon pause_icon prev_icon next_icon]
  (box :class "music_card" :orientation "v" :space-evenly false :spacing 20
    ;; Spotify Section
    (player_card :player "spotify" :status spotify_status :title spotify_title :artist spotify_artist 
     :position spotify_position :art spotify_art :play_icon play_icon :pause_icon pause_icon 
     :prev_icon prev_icon :next_icon next_icon)

    ;; Separator
    (box :class "separator" :height 1)

    ;; Firefox Section
    (player_card :player "firefox" :status firefox_status :title firefox_title :artist firefox_artist 
      :position firefox_position :art firefox_art :play_icon play_icon :pause_icon pause_icon 
      :prev_icon prev_icon :next_icon next_icon)
  )
)


