(defwidget player_card [player status title artist position art play_icon pause_icon prev_icon next_icon]
    (box :class "player_section" :orientation "h" :visible {status != ""}
        ;; Left side: Cover art with gradient
        (box :class "cover_container"
          :style "
            background-image: 
              linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.7) 0%,
                rgba(0, 0, 0, 0.3) 50%,
                transparent 100%),
              url('${art}');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
          "
        )
        
        ;; Right side: Content
        (box :class "content_container" :orientation "v"
          ;; Header
          (box :class "player_header" :orientation "h"
            (label :class "player_icon__${player}__${status}" :text {player == "spotify" ? "" : "󰈹"})
            ;; (label :class "player_name" :text player)
            ;; (label :class "player_status_dot" 
            ;;        :text {status == "Playing" ? "●" : "○"})
          )
          
          ;; Title and Artist
          (box :class "text_container" :orientation "v"
            (label :class "music_title" :text title :wrap true)
            (label :class "music_artist" :text artist :wrap true)
          )
          
          ;; Controls
          (box :class "controls_container" :orientation "h"
            (button :onclick "playerctl --player='${player}' previous"
                    :class "control_btn prev_btn"
              (label :class "control_icon" :text prev_icon))
            (button :onclick "playerctl --player='${player}' play-pause"
                    :class "control_btn playpause_btn"
              (label :class "playpause_icon" 
                     :text {status == "Playing" ? pause_icon : play_icon}))
            (button :onclick "playerctl --player='${player}' next"
                    :class "control_btn next_btn"
              (label :class "control_icon" :text next_icon))
          )
        )
    )
    ;;   (box :class "player_info" :orientation "v" :halign "start" :spacing 5
    ;;     (label :class "player_header" :text player)
    ;;     (label :class "music" :wrap true :limit-width 300 
